<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_bg"
    tools:context=".SearhDetailActivity">


  <ImageView
      android:id="@+id/imageView12"
      android:layout_width="420dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="284dp"
      android:src="@drawable/enterinfo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView13"
      android:layout_width="37dp"
      android:layout_height="52dp"
      android:layout_marginStart="44dp"
      android:layout_marginTop="28dp"
      android:src="@drawable/detail_map"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView12" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="20dp"
      android:text="中国·北京温榆河公园"
      android:textAllCaps="false"
      android:textSize="28sp"
      android:textStyle="bold"
      app:layout_constraintStart_toEndOf="@+id/imageView13"
      app:layout_constraintTop_toBottomOf="@+id/imageView12" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:text="北京市朝阳区来广营北路与滨河路交叉路口南侧"
      app:layout_constraintStart_toEndOf="@+id/imageView13"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="86dp"
      android:layout_height="107dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/bg_detail_score"
      android:gravity="center"
      android:text="4.7/5"
      android:textColor="@color/lw_4"
      android:textSize="20sp"
      android:textStyle="bold"

      app:layout_constraintStart_toEndOf="@+id/textView3"
      app:layout_constraintTop_toBottomOf="@+id/imageView12" />

  <ImageView
      android:id="@+id/imageView14"
      android:layout_width="328dp"
      android:layout_height="58dp"
      android:layout_marginTop="20dp"
      android:src="@drawable/detail_tag"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.382"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="184dp"
      android:layout_marginBottom="12dp"
      android:text="周一到周日07：00-20：00 20：00停止入场"
      app:layout_constraintBottom_toTopOf="@+id/textView7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/textView7"
      android:layout_width="478dp"
      android:layout_height="221dp"
      android:layout_marginTop="160dp"
      android:background="@drawable/bg_forbtn"
      android:text="快捷预约"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView12" />

  <Button
      android:id="@+id/btn"
      android:layout_width="253dp"
      android:layout_height="36dp"
      android:background="@drawable/bg_detail_btn_res"
      android:text="一键预约"
      android:textColor="@color/lw_1"
      app:layout_constraintBottom_toBottomOf="@+id/textView7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.501"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/textView7"
      app:layout_constraintVertical_bias="0.935" />

  <ImageView
      android:id="@+id/imageView15"
      android:layout_width="428dp"
      android:layout_height="127dp"
      android:src="@drawable/detail_reserve"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.54"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.515" />

  <ImageView
      android:id="@+id/imageView16"
      android:layout_width="39dp"
      android:layout_height="42dp"
      android:layout_marginTop="319dp"
      android:src="@drawable/detail_detail"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.061"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView13"
      app:layout_constraintVertical_bias="0.013" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="32dp"
      android:text="公园简介"
      android:textSize="24sp"
      app:layout_constraintStart_toEndOf="@+id/imageView16"
      app:layout_constraintTop_toBottomOf="@+id/textView7" />

  <TextView
      android:id="@+id/textView9"
      android:layout_width="496dp"
      android:layout_height="214dp"
      android:text="@string/detail_detail"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView7"
      app:layout_constraintVertical_bias="0.385" />

  <Button
      android:id="@+id/btn2"
      android:layout_width="119dp"
      android:layout_height="57dp"
      android:layout_marginTop="320dp"
      android:layout_marginEnd="172dp"
      android:background="@drawable/bg_detail_btn_deeper"
      android:text="深入"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView7" />

  <Button
      android:id="@+id/btn1"
      android:layout_width="119dp"
      android:layout_height="57dp"
      android:layout_marginStart="132dp"
      android:layout_marginTop="320dp"
      android:background="@drawable/dg_detail_btn_back"
      android:text="返回"
      android:textSize="20sp"
      android:textColor="@color/white"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView7" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_begin="1091dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_begin="-22dp" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_begin="251dp" />
</androidx.constraintlayout.widget.ConstraintLayout>