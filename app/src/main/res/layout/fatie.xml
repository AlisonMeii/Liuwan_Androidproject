<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_1"
    android:orientation="vertical"
    tools:context=".fatie">

    <ImageView
        android:id="@+id/rec"
        android:layout_width="1080px"
        android:layout_height="2052px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rec" />


    <ImageView
        android:id="@+id/draft"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider4"
        app:layout_constraintVertical_bias="0.741"
        app:srcCompat="@drawable/draft" />

    <Button
        android:id="@+id/btback_other"
        android:layout_width="80px"
        android:layout_height="80px"
        android:background="@color/lw_2"
        android:stateListAnimator="@null"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/bg1"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/liuwan"
        app:layout_constraintTop_toBottomOf="@id/top" />

    <ImageView
        android:id="@+id/bg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle" />

    <ImageView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top3" />

    <ImageView
        android:id="@+id/liuwan"
        android:layout_width="175px"
        android:layout_height="58px"
        app:layout_constraintBottom_toBottomOf="@id/bg1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:srcCompat="@drawable/title" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="80px"
        android:layout_height="80px"
        app:layout_constraintBottom_toBottomOf="@id/bg1"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/liuwan"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/instrcution"
        android:layout_width="80px"
        android:layout_height="80px"
        app:layout_constraintBottom_toBottomOf="@id/bg1"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toRightOf="@id/liuwan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:srcCompat="@drawable/instruction" />

    <EditText
        android:id="@+id/mainwords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/main"
        android:minHeight="48dp"
        android:textStyle="bold"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296" />

    <EditText
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/content"
        android:minHeight="48dp"
        android:textColorHint="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.339" />

    <Button
        android:id="@+id/fb"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/lw_1"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="50px"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintLeft_toRightOf="@id/draft"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/draft" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="草稿箱"
        android:textSize="30px"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/draft"
        app:layout_constraintRight_toRightOf="@id/draft"
        app:layout_constraintTop_toBottomOf="@id/draft"

        />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toTopOf="@id/mainwords"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@id/mainwords" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="@id/logo" />

    <ImageView
        android:id="@+id/cat"
        android:layout_width="120px"
        android:layout_height="120px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintLeft_toRightOf="@id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider4"
        app:layout_constraintVertical_bias="0.177"
        app:srcCompat="@drawable/cat" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bygygjcz"
        app:layout_constraintVertical_bias="0.112"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="243dp"
        android:layout_height="22dp"
        android:text="给溜友们定个位吧~"
        android:textSize="30px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/locate"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintLeft_toRightOf="@id/locate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/locate" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="395dp"
        android:layout_height="53dp"
        android:text="发布之后不可再次编辑哦，想好再发布哦！"
        android:textSize="40px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider4"
        app:layout_constraintVertical_bias="0.204" />

    <ImageView
        android:id="@+id/locate"
        android:layout_width="90px"
        android:layout_height="90px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider3"
        app:layout_constraintVertical_bias="0.029"
        app:srcCompat="@drawable/locate" />


    <Button
        android:id="@+id/ht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lw_4"
        android:text="#话题"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/divider3"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider2"
        app:layout_constraintVertical_bias="0.948" />

    <Button
        android:id="@+id/bygynq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="北邮公园(南区)"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/locate"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/bygygjcz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="北邮公园(公交站)"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/locate"
        app:layout_constraintVertical_bias="0.148" />

    <Button
        android:id="@+id/yh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lw_4"
        android:text="\@用户"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/divider3"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider2"
        app:layout_constraintVertical_bias="0.948" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="282px"
        android:layout_height="355px"
        app:layout_constraintBottom_toTopOf="@id/divider1"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg1"
        app:layout_constraintVertical_bias="0.448"
        app:srcCompat="@drawable/photo" />

    <ImageView
        android:id="@+id/add_photo"
        android:layout_width="282px"
        android:layout_height="355px"
        app:layout_constraintBottom_toTopOf="@id/divider1"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg1"
        app:layout_constraintVertical_bias="0.448"
        app:srcCompat="@drawable/add_photo" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="320dp"
        android:layout_height="324dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542"
        app:srcCompat="@drawable/logo_release" />


</androidx.constraintlayout.widget.ConstraintLayout>