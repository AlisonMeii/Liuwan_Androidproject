<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupInfoActivity"
    android:background="@color/back_1"
    >

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sign_1" />

    <ImageButton
        android:id="@+id/ibtn_1"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/bg_forbtn2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        app:srcCompat="@drawable/icon_back"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_1"
        app:srcCompat="@drawable/bg_signup1" />

    <EditText
        android:id="@+id/et_1"
        android:layout_width="430dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_forsignup1"
        android:hint="邮箱"
        android:maxLines="1"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/word_1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_1" />

    <EditText
        android:id="@+id/et_2"
        android:layout_width="430dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_forsignup1"
        android:hint="用户名"
        android:maxLines="1"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/word_1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_1" />

    <EditText
        android:id="@+id/et_3"
        android:layout_width="430dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_forsignup1"
        android:hint="密码"
        android:maxLines="1"
        android:padding="5dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/word_1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_2" />

    <EditText
        android:id="@+id/et_4"
        android:layout_width="430dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_forsignup1"
        android:hint="确认密码"
        android:maxLines="1"
        android:padding="5dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/word_1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_3" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="400dp"
        android:layout_height="66dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/bg_forsignup2"

        android:text="下一页"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="227dp"
        android:layout_height="85dp"
        android:layout_marginBottom="102dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/im_cattytalkforsign" />


</androidx.constraintlayout.widget.ConstraintLayout>