            android:layout_height="56px"
            android:layout_marginLeft="46px"
            android:background="@drawable/homepage_rounded_rect"
            android:gravity="center"
            android:text="健身娱乐"
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="128px"
            android:layout_height="56px"
            android:layout_marginLeft="46px"
            android:background="@drawable/homepage_rounded_rect"
            android:gravity="center"
            android:text="户外溜娃"
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="113px"
            android:layout_height="56px"
            android:layout_marginLeft="46px"
            android:background="@drawable/homepage_rounded_rect"
            android:gravity="center"
            android:text="咖啡厅"
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="138px"
            android:layout_height="56px"
            android:layout_marginLeft="46px"
            android:background="@drawable/homepage_rounded_rect"
            android:gravity="center"
            android:text="网红打卡"
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="bold" />
    </GridLayout>

