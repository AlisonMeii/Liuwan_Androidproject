            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="5px"
            android:elevation="5dp"
            android:text="露营野餐"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="5px"
            android:elevation="5dp"
            android:text="拍照打卡"
            android:textSize="32px"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="65px"
            android:layout_marginTop="50px"
            android:background="@drawable/icon_quick_link5"
            android:elevation="5dp" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="115px"
            android:layout_marginTop="50px"
            android:background="@drawable/icon_quick_link6" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="115px"
            android:layout_marginTop="50px"
            android:background="@drawable/icon_quick_link7"
            android:elevation="5dp" />

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="115px"
            android:layout_marginTop="50px"
            android:background="@drawable/icon_quick_link8"
            android:elevation="5dp" />

        <TextView
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginTop="5px"
            android:elevation="5dp"
            android:text="娱乐风光"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="5px"
            android:elevation="5dp"
            android:text="体育锻炼"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="5px"
            android:elevation="5dp"
            android:text="好店推荐"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="5px"
            android:elevation="5dp"
            android:text="好评推荐"
            android:textSize="32px"
            android:textStyle="bold" />

