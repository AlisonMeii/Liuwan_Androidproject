        <TextView
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:layout_marginTop="5px"
            android:elevation="5dp"
            android:text="名胜古迹"
            android:textSize="32px"
            android:textStyle="bold" />

        <TextView
